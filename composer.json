{
    "name": "jadojodo/cloudways-php-sdk",
    "description": "A PHP SDK for interacting with the Cloudways API",
    "type": "library",
    "autoload": {
        "psr-4": {
            "JadoJodo\\CloudwaysPhpSdk\\": "src/"
        }
    },
    "license": "MIT",
    "minimum-stability": "alpha",
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "pestphp/pest": "^3.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "ci-test": "vendor/bin/pest --coverage --min=90"
    }
}
